---
import CV from "../assets/svg/cv.svg";
import Diploma from "../assets/svg/diploma.svg";
import GitHub from "../assets/svg/github.svg";
import LinkedIn from "../assets/svg/linkedin.svg";
import Gmail from "../assets/svg/gmail.svg";
---

<footer class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-10">
      <div
        class="flex justify-between w-full flex-col lg:items-start items-center space-y-6 gap-9"
      >
        <div class="flex space-x-6 sm:space-x-8">
          <a
            href="https://github.com/MoyaRamiro/"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="GitHub"
          >
            <div
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            >
              <GitHub />
            </div>
          </a>
          <a
            href="https://www.linkedin.com/in/ramiro-moya/"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="LinkedIn"
          >
            <div
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            >
              <LinkedIn />
            </div>
          </a>
          <a
            href="https://mail.google.com/mail/?view=cm&fs=1&to=moya04.ramiro@gmail.com&su=Hola%20Ramiro!"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="Email"
          >
            <div
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            >
              <Gmail />
            </div>
          </a>
        </div>
      </div>
      <div
        class="lg:col-end-4 text-white flex justify-between w-full flex-col lg:items-end items-center space-y-6 gap-9"
      >
        <div class="flex space-x-6 sm:space-x-8">
          <a
            href="RamiroMoyaCV.pdf"
            target="_blank"
            class="flex flex-col items-center group"
            aria-label="Curriculum Vitae"
          >
            <CV
              class="text-[var(--white-icon)] hover:text-[var(--white)] transition duration-300 ease-in-out"
            />
          </a>
          <a
            href="ActAcademicaRamiroMoya.pdf"
