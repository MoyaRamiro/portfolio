---
import { Image } from "astro:assets";
import hypesounds from "../assets/img/hypesounds.webp";
import mrnba from "../assets/img/mrnba.webp";
import velada from "../assets/img/lavelada.webp";
import GitHub from "../assets/svg/github.svg";
import Link from "../assets/svg/link.svg";
import Code from "../assets/svg/code.svg";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
  technologies: string[];
}

const projects: Project[] = [
  {
    title: "La Velada V Web Oficial",
    image: velada as ImageMetadata,
    link: "https://github.com/MoyaRamiro/la-velada-web-oficial",
    preview: "https://www.infolavelada.com/",
    status: "In Development",
    technologies: ["Astro", "TypeScript", "TailwindCSS", "Node.js"],
  },
  {
    title: "HypeSounds",
    image: hypesounds as ImageMetadata,
    link: "https://github.com/MoyaRamiro/HypeSounds",
    preview: "https://hype-sounds.vercel.app/",
    status: "Public Beta",
    technologies: ["Remix", "TypeScript", "TailwindCSS", "Vite"],
  },
  {
    title: "MR. NBA",
    image: mrnba as ImageMetadata,
    link: "https://github.com/MoyaRamiro/Mr-NBA",
    preview: "https://mr-nba.vercel.app/",
    status: "Maintenance",
    technologies: ["Angular", "TypeScript", "CSS"],
  },
];
---

<section id="projects" class="border-t border-white/10 py-12 text-white">
  <div class="mx-auto max-w-5xl px-4">
    <p class="mb-2 text-lg text-blue-400 font-medium bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
      My work
    </p>
    <h2 class="mb-8 text-4xl font-medium md:text-5xl">Projects</h2>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
      {projects.map((project, index) => (
        <div class="group">
          <div class="block">
            <a
              href={project.preview}
              aria-label={`See ${project.title}`}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="mb-4 overflow-hidden rounded-2xl shadow-lg transition-shadow duration-300 hover:shadow-xl">
                <Image
                  src={project.image}
                  alt={project.title}
                  widths={[100, 200, project.image.width]}
                  class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105 md:h-72"
                />
              </div>
            </a>

            <div class="px-3">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-grow">
                  <h3 class="text-2xl font-semibold mb-1">{project.title}</h3>
                  <span class="text-sm text-gray-400">{project.status}</span>
                </div>
                <div class="flex gap-2 ml-4">
                  <a
                    target="_blank"
                    href={project.link}
                    aria-label="GitHub"
                    class="flex size-12 items-center justify-center rounded-xl border border-white/20 bg-gray-900/60 p-3 text-gray-400 transition duration-300 ease-in-out hover:bg-white/20 hover:text-white"
                    rel="noreferrer"
                  >
                    <Code />
                  </a>
                  <a
                    target="_blank"
                    href={project.preview}
                    aria-label="Preview"

                    class="flex size-12 items-center justify-center rounded-xl border border-white/20 bg-gray-900/60 p-3 text-gray-400 transition duration-300 ease-in-out hover:bg-white/20 hover:text-white"
                    rel="noreferrer"
                  >
                    <Link />
                  </a>
                </div>
              </div>

              <div class="flex flex-wrap gap-2">
                {project.technologies.map((technology, techIndex) => (
                  <span
                    class="rounded-full bg-white/10 px-3 py-1 text-xs text-gray-300 border border-white/20"
                  >
                    {technology}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <a
      target="_blank"
      href="https://github.com/MoyaRamiro?tab=repositories"
      aria-label="GitHub"
      class="mt-9 flex w-full items-center justify-center gap-2 rounded-full border border-white/20 bg-gray-900/60 p-4 text-gray-400 transition duration-300 ease-in-out hover:bg-white/20 hover:text-white"
      rel="noreferrer"
    >
      <span class="text-base md:text-lg">More projects on</span>
      <GitHub height="24" width="24" />
    </a>
  </div>
</section>
